html(lang="sv")
    head
        meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0")
        title Röda Korset - Krishanteringssystem

        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css")
        link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
        link(href="/css/style.css" type="text/css" rel="stylesheet" media="screen,projection")
    body
        nav(style="background: #FFF; box-shadow: none;")
            .container
                .nav-wrapper
                    a(href="#" style="top: 10px").brand-logo
                        img(src="/images/logo.svg" style="height: 40px")
        .container
            #index-banner.section.no-pad-bot
                h4.center Hej #{data.userid}
                p.center Bränder härjar just nu i stora delar av Dalarna.
                p.center
                    a(href="/moreinfo" target="_blank") Läs mer här

            .container
                table
                    thead
                        tr
                            th Information
                    tbody
                        tr
                            td.info-with-icon
                                i.material-icons accessibility
                                span Kläder/utrustning att ta med:
                            td Regnkläder och handskar
                        tr
                            td.info-with-icon
                                i.material-icons group
                                span Volontärer:
                            td 99/100
                        tr
                            td.info-with-icon
                                i.material-icons location_on
                                span Samlingsplats:
                            td Mora, Morastrand
                        tr
                            td.info-with-icon
                                i.material-icons access_time
                                span Tidpunkt:
                            td 15:00, 26 oktober
                table
                    thead
                        tr
                            th Hjälp som behövs
                    tbody
                        tr
                            td Städning
                        tr
                            td Bädda sängar
                        tr
                            td Dela ut mat
            .container
                .row
                    .col.s12
                        .card-panel.red
                            form.invert-input
                                h6.white-text Skicka meddelande till Jour
                                .row
                                    .input-field.col.s12
                                        textarea#textarea1.materialize-textarea
                                        label(for="textarea1") Meddelande
                                .row
                                    button(type="submit" name="action").btn.white.black-text.waves-effect.waves-light Skicka
                                        i.material-icons.right send
            .container
                iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1934.003647157004!2d14.54080731651843!3d61.00490358259724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4667dc8392b66b51%3A0x1e027135d335bddb!2sMorastrand%20station!5e0!3m2!1ssv!2sse!4v1601971620024!5m2!1ssv!2sse")#googleMaps

        script(src="https://code.jquery.com/jquery-2.1.1.min.js")
        script(src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js")
        script(src="/js/init.js")

