html(lang="sv")
    head
        meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0")
        title Röda Korset - Kirshanteringssystem

        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css")
        link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
        link(href="css/style.css" type="text/css" rel="stylesheet" media="screen,projection")
    body
        .nav(style="background: #FFF; box-shadow: none;")
            .container
                .nav-wrapper
                    a(href="#" style="top:10px").brand-logo
                        img(src="/images/logo.svg" style="height: 40px")
        #index-banner.section.no-pad-bot
            h4.center Hej #{data.userid}
            p.center Bränder härjar just nu i stora delar av Dalarna.
            p.center
                a(href="/moreinfo" target="_blank") Läs mer här

            .container
                table
                    thead
                        tr
                            th info
                    tbody
                        tr
                            td.info-with-icon
                                i.material-icons accessibility
                                span Kläder/Utrustning
                            td Regnkläder och handskar
                        tr
                            td.info-with-icon
                                i.material-icons group
                                span Volontärer:
                            td 99/100
                        tr
                            td.info-with-icon
                                i.material-icons location_on
                                span Samlingsplats:
                            td Mora,Morastrand
                        tr
                            td.info-with-icon
                                i.material-icons access_time
                                span Tidpunkt:
                            td 15:00, 26 Oktober
                table
                    thead
                        tr
                            th Hjälp som behövs
                    tbody
                        tr
                            td Städning
                        tr
                            td Bädda sängar
                        tr
                            td Dela ut mat
                h4.center Kan du delta som volontär?
                br
                .container
                    .row.center
                        .col.s1.xl2
                        a(href=`./${data.userid}/yes`)#yes-brn.col.s4.xl3.btn.waves-effect.waves-light.green Ja
                        .col.s1.xl2
                        a(href=`./${data.userid}/no`)#no-brn.col.s4.xl3.btn.waves-effect.waves-light.red Nej
                        .col.s1.xl2
        script(src="https://code.jquery.com/jquery-2.1.1.min.js")
        script(src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js")
        script(src="js/init.js")
